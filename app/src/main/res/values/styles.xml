<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="csy_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/csy_row_h</item>
        <item name="android:paddingLeft">@dimen/csy_pd</item>
    </style>

    <style name="csy_row1" parent="csy_row">
        <item name="android:background">@drawable/csy_form_row</item>
    </style>

    <style name="csy_row_label">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_label_w</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_label</item>
    </style>

    <style name="csy_textbox">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_text</item>
        <item name="android:textColorHint">@color/csy_hint</item>
        <item name="android:background">@drawable/csy_textbox</item>
        <item name="android:textSize">@dimen/csy_text_ts</item>
    </style>

    <style name="csy_textbox1" parent="csy_textbox">
        <item name="android:layout_marginRight">@dimen/csy_icon_w</item>
    </style>

    <style name="csy_row_icon">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_icon_w</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
    </style>


    <style name="margin_h">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="margin_regi">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@drawable/frame_dialog</item>
    </style>

    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/translucent</item>
    </style>

    <style name="tagging_edittext_style">

        <item name="android:textColorHint">@color/public_anhui_color</item>

        <item name="android:textColor">@color/form_text_color_tagging</item>

    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--弹窗动画-->
    <style name="PopupWindow">
        <item name="android:windowEnterAnimation">@anim/window_in</item>
        <item name="android:windowExitAnimation">@anim/window_out</item>
    </style>

    <!-- dialog样式 -->
    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>
        <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--背景是否模糊显示-->
    </style>
    <!-- dialog底部弹出菜单动画 -->
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>
</resources>
