<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    >
<TextView
    android:id="@+id/tv_systemtype"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:text="系统类型"
    android:padding="10dip"
    android:textSize="16sp"/>

<TextView
    android:layout_marginLeft="20dp"
    android:id="@+id/tv_systemtype_get"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"/>
</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"
    android:text="账号"/>

<TextView
    android:layout_marginLeft="20dp"
    android:id="@+id/tv_account_get"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"/>
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"
    android:text="密码"/>

<TextView
    android:layout_marginLeft="20dp"
    android:id="@+id/tv_pwd_get"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"/>
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"
    android:text="加密方式"/>

<TextView
    android:layout_marginLeft="20dp"
    android:id="@+id/tv_encryption_get"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"/>
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    >
<Button
    android:id="@+id/btn_save"
    android:text="保存"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"
    />

<Button
    android:id="@+id/btn_addagain"
    android:layout_marginLeft="20dp"
    android:text="再次添加"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textColor="@android:color/black"
    android:padding="10dip"
    android:textSize="16sp"/>
</LinearLayout>
    </LinearLayout>
