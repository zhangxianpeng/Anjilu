<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.example.administrator.view.AtyLogin"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


    <ImageView
        android:layout_centerInParent="true"
        android:layout_above="@+id/ll_edit"
        android:id="@+id/iv_person_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/person"/>

    <LinearLayout
    android:id="@+id/ll_edit"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <EditText
            android:id="@+id/et_phone_login"
            style="@style/margin_h"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_white_padding"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:padding="5dp"
            android:textColor="@color/base_color_666"
            android:textColorHint="@color/base_color_999"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_phone"
            android:textSize="@dimen/common_small_fonts" />

        <EditText
            android:id="@+id/et_pwd_login"
            style="@style/margin_h"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_phone_login"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_password"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_white_padding"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/base_color_666"
            android:textColorHint="@color/base_color_999"
            android:textSize="@dimen/common_small_fonts" />



        <Button
            android:id="@+id/btn_ok_login"
            style="@style/margin_h"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_pwd_login"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_common_selector"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/common_big_fonts" />


</LinearLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    style="@style/margin_h"
    android:layout_below="@+id/ll_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_regi"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="快速注册"
        android:textColor="@color/base_color_999"
        android:textSize="@dimen/common_small_fonts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_find_pwd"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/base_color_999"
        android:textSize="@dimen/common_small_fonts" />
</LinearLayout>
    </RelativeLayout>


